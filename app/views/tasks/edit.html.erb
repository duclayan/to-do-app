<div class = "columns is-centered mt-6">
    <div class = "column is-one-third">
        <h1 class = "is-size-2 has-text-weight-bold mb-3">Edit Task</h1>

        <%= form_with method: :put, scope: :task, url: user_category_task_path(current_user, @task.category, @task), local: true do |form| %>
            <%= render partial: 'form', task: @task, locals: { form: form } %>
        <% end %>
    </div>
</div>